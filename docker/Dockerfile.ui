# 1) Build stage: install deps & compile
FROM node:lts-alpine AS builder
WORKDIR /app

# Build argument for API URL
ARG VITE_API_BASE_URL=http://localhost:8080
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

# Enable pnpm via corepack
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files and .npmrc
COPY ../frontend/package.json ../frontend/pnpm-lock.yaml ../frontend/.npmrc ./

# Configure pnpm to use hoisted node-linker for Docker compatibility
RUN echo "node-linker=hoisted" >> .npmrc

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source files (excluding node_modules via .dockerignore)
COPY ../frontend/src ./src
COPY ../frontend/static ./static
COPY ../frontend/*.js ./
COPY ../frontend/*.ts ./
COPY ../frontend/*.json ./
COPY ../frontend/*.html ./

# Build the application
RUN pnpm run build

# 2) Runtime stage: slim down image
FROM node:lts-alpine AS runner
WORKDIR /app

# Copy only what's needed from builder
COPY --from=builder /app/build ./build
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

# Set NODE_ENV just in case
ENV NODE_ENV=production
ENV PORT=3000
ENV HOST=0.0.0.0
EXPOSE 3000

CMD ["node", "build/index.js"]
