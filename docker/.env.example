# PostgreSQL Database Configuration
POSTGRES_USER=frnq
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=frnq

# API Configuration
ASPNETCORE_ENVIRONMENT=Production

# ASP.NET Core uses double underscores (__) for nested configuration
# Cookies section
Cookies__Domain=localhost

# ConnectionStrings section
ConnectionStrings__DatabaseConnection=Server=postgres;Port=5432;Database=frnq;User Id=frnq;Password=change_this_password_in_production;

# JwtSettings section
JwtSettings__SecretKey=your-super-secret-key-that-should-be-at-least-256-bits-long-for-security-purposes-and-stored-securely
JwtSettings__Issuer=frnq-api
JwtSettings__Audience=frnq-client
JwtSettings__AccessTokenExpiryInMinutes=15

# Features section
Features__SignupEnabled=true

# UI Configuration
NODE_ENV=production
VITE_API_BASE_URL=http://localhost:8080

# Port Configuration (optional - defaults are shown)
# POSTGRES_PORT=5432
# API_PORT=8080
# UI_PORT=3000
