{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"Cookies": {
		"Domain": "localhost"
	},
	"ConnectionStrings": {
		"DatabaseConnection": "Server=localhost;Port=5432;Database=frnq;User Id=postgres;Password=some-password;"
	},
	"JwtSettings": {
		"SecretKey": "your-super-secret-key-that-should-be-at-least-256-bits-long-for-security-purposes-and-stored-securely",
		"Issuer": "frnq-api",
		"Audience": "frnq-client",
		"AccessTokenExpiryInMinutes": "15"
	},
	"Features": {
		"SignupEnabled": true
	},
	"ApiBaseUrl": "https://localhost:7000",
	"FrontendUrl": "http://localhost:5173",
	"OidcProviders": {
		"example-provider": {
			"Enabled": false,
			"DisplayName": "Example Provider",
			"AuthorizationEndpoint": "https://example.com/oauth2/authorize",
			"TokenEndpoint": "https://example.com/oauth2/token",
			"UserInfoEndpoint": "https://example.com/oauth2/userinfo",
			"IssuerUrl": "https://example.com",
			"ClientId": "your-client-id",
			"ClientSecret": "your-client-secret",
			"Scopes": "openid profile email",
			"AutoRedirect": false,
			"DisplayOrder": 0,
			"ClaimMappings": "{\"email\":\"email\",\"name\":\"name\",\"sub\":\"sub\"}"
		}
	}
}